<!-- shelf_layout.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/bookSpine"
        android:layout_height="80dp"
        android:layout_width="25dp"
        android:src="@drawable/bookspine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/bookFront"
        android:layout_height="100dp"
        android:layout_width="50dp"
        android:src="@drawable/bookfront"
        app:layout_constraintStart_toEndOf="@id/bookSpine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/bookFrontPlaceholder"
        android:layout_width="50dp"
        android:layout_height="125dp"
        android:visibility="gone"
    android:background="@android:color/transparent"
    app:layout_constraintStart_toEndOf="@id/bookSpine"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Скрыть книги"
        app:layout_constraintTop_toTopOf="@+id/bookFront"
        app:layout_constraintBottom_toBottomOf="@+id/bookFront"
    app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/brown"
        app:layout_constraintTop_toBottomOf="@id/bookSpine"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
